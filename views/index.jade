extends layout

block content
  div(id='content')
    if errors.length > 0
      ul 
        for error in errors
          li= error.param + ': ' + error.msg
    form(id='form', method='GET')
      p
        label board
          textarea(name='board')= board
      p
        div(id='minFrequencySlider')
        label minimum frequency
          input(name='minFrequency', value=minFrequency)
      p
        label desired letters
          input(name='desired', value=desired)
      p
        input(type='submit')
    if words.length > 0
      p These are the words:
      ul
        each word in words
          li= word

block contentScripts
  script(src='/javascripts/index.js')
  
