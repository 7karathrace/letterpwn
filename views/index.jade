extends layout

block content
  div#content
    if errors.length > 0
      ul 
        for error in errors
          li= error.param + ': ' + error.msg
    div#boardControls 
      input#randomize.styled(type='submit', value='random board')
      input#clear.styled(type='submit', value='clear board')
    div#controls
      - var checker = 0;
      div#getBoard
        form
          table
            each i in [0, 1, 2, 3, 4]
              tr
                each j in [0, 1, 2, 3, 4]
                  - var id = (i * 5 + j);
                  - checker ^= 1;
                  td(class='tdb' + id + ' checker' + checker)
                    input.letter(type='text', id='b' + id, name='b' + id, tabIndex=id + 1, size=1, maxLength=1)
      table#paintControls
        tr
          td
            div.iconHighlight
              div#enterText.icon
          td
            div.iconHighlight
              div#oursPaint.icon.ours
          td
            div.iconHighlight
              div#theirsPaint.icon.theirs
          td
            div.iconHighlight
              div#nonePaint.icon
    div#results
      div#frequency
        div#frequencyDescription
          p
            span#frequencyLabelName
              | Vocabulary:
            span#frequencyLabel
      div#frequencyCtrl
      div#moveContainer
        div#moves
          p(style='text-align: center') Fetching moves...
        div#loading
      div#statsToggle
        div#showStats
          a
            | stats
        div#stats
          span#statsDictionaryCount
          |  words searched for this vocabulary.&#32;
          span#statsWordsCount
          |  words found for this board.&#32;
          span#statsMoveCount
          |  possible moves ranked in&#32;
          span#statsComputeTime
          |  seconds, at&#32;
          span#statsMovesPerSecond
          |  moves/second.&#32;
          a#hideStats
              | hide stats

block contentScripts
  script(src='/javascripts/jquery-wiggle/lib/wiggle.jquery.js')
  script(src='/javascripts/letterpress-bitmask.js')
  script(src='/javascripts/index.js')
  
