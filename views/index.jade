extends layout

block content
  div(id='content')
    if errors.length > 0
      ul 
        for error in errors
          li= error.param + ': ' + error.msg
    div(id='controls')
      - var checker = 0;
      form(id='getBoard')
        table
          th
          each i in [0, 1, 2, 3, 4]
            tr
            each j in [0, 1, 2, 3, 4]
              - var id = (i * 5 + j);
              - checker ^= 1;
              td(id='tdb' + id, class='checker' + checker)
                input.letter(type='text', id='b' + id, name='b' + id, tabIndex=id + 1, size=1, maxLength=1)
        p
          label minimum frequency
            input(name='minFrequency', value=minFrequency, size=2)
      p(id='devControls')
        input(id='randomize', type='submit', value='randomize')
    div(id='results')
      p(id='timing')
      h2 Words?
      p(id='words')

block contentScripts
  script(src='/javascripts/index.js')
  
